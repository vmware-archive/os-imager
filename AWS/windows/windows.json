{
  "_comment": "Build with `packer build windows.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_name_prefix` }}/{{ user `source_build_type` }}/{{ user `ami_name_suffix` }}*",
          "root-device-type": "ebs"
        },
        "owners": [
          "883373499178",
          "540082622920",
          "989543020150"
        ],
        "most_recent": true
      },
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "instance_type": "{{ user `instance_type` }}",
      "user_data_file": "{{ user `user_data_file` }}",
      "communicator": "winrm",
      "winrm_username": "Administrator",
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "ami_name": "{{ user `ami_name_prefix` }}/{{ user `build_type` }}/{{ user `ami_name_suffix` }}/{{ user `salt_branch`}}/{{timestamp}}",
      "ami_description": "{{ user `build_type` | upper }} Image of {{ user `os_name` }} {{ user `os_version` }} for salt@{{ user `salt_branch` }}",
      "tags": {
        "Name":"{{ user `build_type` | upper }} // {{ user `os_name` }} {{ user `os_version`}} // salt@{{ user `salt_branch`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "{{ user `build_type` | upper }}",
        "created-by": "packer",
        "Owner": "SRE",
        "Salt-Branch": "{{ user `salt_branch` }}",
        "Bootstrapped-Salt-Version": "{{ user `bootstrap_version` }}",
        "Python-2": true,
        "Python-3": true
      },
      "run_tags": {
        "Name": "Packer {{ user `build_type` | upper }} {{ user `os_name` }} {{ user `os_version` }} Builder",
        "created-by": "packer",
        "Owner": "SRE"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "script": "AWS/windows/scripts/AdjustMemory.ps1",
      "environment_vars": [
        "INITIAL_SIZE=8912",
        "MAXIMUM_SIZE=8912",
        "DRIVE_LETTER=D"
      ]
    },
    {
      "type": "shell-local",
      "script": "AWS/scripts/prep-windows.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type": "powershell",
      "script": "AWS/scripts/prep-windows.ps1",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal",
      "guest_os_type": "windows",
      "disable_sudo": true,
      "salt_bin_dir": "c:\\salt",
      "bootstrap_args": "-pythonVersion 3 -runservice false -version {{ user `bootstrap_version` }}"
    },
    {
      "type": "powershell",
      "inline": [
        "Remove-Item C:/salt/state -Recurse -Force",
        "Remove-Item C:/salt/pillar -Recurse -Force"
       ]
    },
    {
      "type": "shell-local",
      "script": "AWS/scripts/prep-windows.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=2"
      ]
    },
    {
      "type": "powershell",
      "script": "AWS/scripts/prep-windows.ps1",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=2"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal",
      "guest_os_type": "windows",
      "disable_sudo": true,
      "salt_bin_dir": "c:\\salt",
      "bootstrap_args": "-pythonVersion 3 -runservice false -version {{ user `bootstrap_version` }}"
    },
    {
      "type": "powershell",
      "inline": [
        "Remove-Item C:/salt/state -Recurse -Force",
        "Remove-Item C:/salt/pillar -Recurse -Force"
       ]
    },
    {
      "type": "powershell",
      "script": "AWS/windows/scripts/SysPrep.ps1"
    }
  ]
}
