{
  "_comment": "Build with `packer build centos.json`",
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `aws_region` }}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "{{ user `ami_name_prefix` }}/{{ user `source_build_type` }}/{{ user `ami_name_suffix` }}*",
          "root-device-type": "ebs"
        },
        "owners": [
          "883373499178",
          "540082622920",
          "989543020150"
        ],
        "most_recent": true
      },
      "instance_type": "{{ user `instance_type` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ami_name": "{{ user `ami_name_prefix` }}/{{ user `build_type` }}/{{ user `ami_name_suffix` }}/{{ user `salt_branch`}}/{{timestamp}}",
      "ami_users": [
        "883373499178",
        "540082622920"
      ],
      "ami_description": "{{ user `build_type` | upper }} Image of {{ user `os_name` }} {{ user `os_version` }} for salt@{{ user `salt_branch` }}",
      "tags": {
        "Name":"{{ user `build_type` | upper }} // {{ user `os_name` }} {{ user `os_version`}} // salt@{{ user `salt_branch`}}",
        "OS-Name": "{{ user `os_name` }}",
        "OS-Version": "{{ user `os_version` }}",
        "Build-Date": "{{ isotime }}",
        "Build-Type": "{{ user `build_type` | upper }}",
        "created-by": "packer",
        "Owner": "SRE",
        "Salt-Branch": "{{ user `salt_branch` }}",
        "Bootstrapped-Salt-Version": "{{ user `bootstrap_version` }}",
        "Python-2": true,
        "Python-3": true
      },
      "run_tags": {
        "Name": "Packer {{ user `build_type` | upper }} {{ user `os_name` }} {{ user `os_version` }} Builder",
        "created-by": "packer",
        "Owner": "SRE"
      },
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_size": 20,
          "volume_type": "gp2",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "script": "AWS/scripts/prep-linux.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=3"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal",
      "bootstrap_args": "-X git v{{ user `bootstrap_version` }}"
    },
    {
      "type": "shell",
      "inline": [
         "sudo rm -rf /srv/salt /srv/pillar"
       ]
    },
    {
      "type": "shell-local",
      "script": "AWS/scripts/prep-linux.sh",
      "environment_vars": [
        "SALT_BRANCH={{ user `salt_branch` }}",
        "PY_VERSION=2"
      ]
    },
    {
      "type": "salt-masterless",
      "local_state_tree": ".tmp/states",
      "local_pillar_roots": ".tmp/pillar",
      "custom_state": "git.minimal",
      "bootstrap_args": "-X git v{{ user `bootstrap_version` }}"
    },
    {
      "type": "shell",
      "inline": [
         "sudo rm -rf /srv/salt /srv/pillar"
       ]
    }
  ]
}
